<div class="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/free-photo/movie-background-collage_23-2149876003.jpg);">
  <div class="container">
    <h1>Movies...<strong>C'est pas un hobby foufou</strong> mais <strong>c'est qu'un exo </strong>!</h1>
    <p>C'est parti !</p>
  </div>
</div>

<div class="background">
  <div class="lists">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <% else %>
        <div class="list">
      <% end %>
          <%= link_to list.name, list_path(list) %>
        </div>
    <% end %>
  </div>
</div>
